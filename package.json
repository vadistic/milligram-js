{
  "name": "milligram-js",
  "version": "0.2.0",
  "private": true,
  "description": "css-in-js port of milligram.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/vadistic/milligram-js"
  },
  "license": "MIT",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "module": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:tags": "ts-node -P tsconfig.cjs.json scripts/replace-tag.ts dist",
    "build": "yarn clean && yarn build:tsc && yarn build:tags",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write src test",
    "lint": "eslint --ext ts,tsx src test",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/node": "^13.13.5",
    "@types/node-sass": "^4.11.0",
    "@vadistic/eslint-config": "^0.3.3",
    "@vadistic/prettier-config": "^0.3.3",
    "eslint": "^7.0.0",
    "jest": "^26.0.1",
    "jsdom": "^16.2.2",
    "milligram": "^1.3.0",
    "node-sass": "^4.14.1",
    "normalize.css": "^8.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  }
}
