{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "allowJs": false,
    "noEmit": false,

    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/test", "**/*.test.ts"]
}
